<p id="notice"><%= notice %></p>
<h1>Opinions</h1>
<% if @opinions.first.nil? %>
  <i>эта таблица пустая</i>
<% else %><table class="sv_table">
  <thead><tr>
    <th>Author</th>
    <th>Words</th>
    <th>Visit</th>
    <th colspan="3"></th>
  </tr></thead>
  <tbody><% @opinions.each do |opinion| %><tr>
    <td><%= opinion.author  %></td>
    <td><%= opinion.words  %></td>
    <td><%= opinion.visit %></td>
    <td><%= link_to 'Show', opinion %></td>
    <td><%= link_to 'Edit', edit_opinion_path(opinion) %></td>
    <td><%= link_to 'Destroy', opinion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr><% end %></tbody>
</table><% end %>
<br><%= link_to 'New Opinion', new_opinion_path %>
