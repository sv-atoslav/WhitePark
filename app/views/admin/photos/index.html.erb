<p id="notice"><%= notice %></p>
<h1>Photos</h1>
<% if @photos.first.nil? %>
  <i>эта таблица пустая</i>
<% else %><table class="sv_table">
  <thead><tr>
    <th>Title</th>
    <th>Preview</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr></thead>
  <tbody><% @photos.each do |photo| %><tr>
    <% if photo.image_stored? %>
      <td><%= image_tag(photo.image.url , style: "width: 100px;", alt: photo.description) %></td>
      <td><%= photo.image.name %></td>
    <% else %>
    <td colspan="2" align="center"><i>image not exist</i></td>
    <% end %>
    <td><%= photo.description %></td>
    <td><%= link_to 'Show', admin_photo_path(photo) %></td>
    <td><%= link_to 'Edit', edit_admin_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', admin_photo_path(photo), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr><% end %></tbody>
</table><% end %>
<br><%= link_to 'New Photo', action: "new" %>
