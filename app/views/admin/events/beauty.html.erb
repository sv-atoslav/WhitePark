<div align = "center">
	<h2><%= @event.title %></h2>
	<hr class="spec-hr">
	<%= @event.description.html_safe %>
	<div class="about-us-image-set"><% @old_list.each do |one_photo_id| %>
		<% photo = Photo.find_by(id: one_photo_id) %>
		<% if photo.nil? %><%= INE.html_safe %>
		<% else %><div class="album-bg"><%= image_tag(photo.image.url, size: "360x360")%></div>
		<% end %>
	<% end %></div>
</div>
