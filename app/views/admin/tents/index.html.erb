<p id="notice"><%= notice %></p>
<h1>Tents</h1>
<% if @tents.first.nil? %><i>эта таблица пустая</i>
<% else %><table class="sv_table">
  <thead><tr>
    <th>Namesize</th>
    <th>Description</th>
    <th>Icon</th>
    <th>Min size</th>
    <th>Max size</th>
    <th>Hpb</th>
    <th>Hpf</th>
    <th colspan="3"></th>
  </tr></thead>
  <tbody><% @tents.each do |tent| %><tr>
    <td><%= tent.namesize %></td>
    <td><%= tent.description %></td>
    <td><%if tent.icon.nil? || tent.icon < 1 %>image not exist
      <% else %>
        <% photo = Photo.find( tent.icon) %>
        <%= image_tag( photo.title , style: "width: 100px;", alt: photo.description ) %>
    <% end %></td>
    <td><%= tent.min_size %></td>
    <td><%= tent.max_size %></td>
    <td><%= tent.hpb %></td>
    <td><%= tent.hpf %></td>
    <td><%= link_to 'Show', admin_tent_path(tent) %></td>
    <td><%= link_to 'Edit', edit_admin_tent_path(tent) %></td>
    <td><%= link_to 'Destroy', admin_tent_path(tent), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr><% end %></tbody>
</table><% end %>
<br><%= link_to 'New Tent', action: "new" %>
