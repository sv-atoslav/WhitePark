<p id="notice"><%= notice %></p>
<h1>Articles</h1>
<% if @articles.first.nil? %><i>эта таблица пустая</i>
<% else %><table class="sv_table">
  <thead><tr>
    <th>Title</th>
    <th>Description</th>
    <th>Published</th>
    <th>Icon</th>
    <th colspan="4"></th>
  </tr></thead>
  <tbody><% @articles.each do |one_article| %><tr>
    <td><%= one_article.title %></td>
    <td><%= one_article.description %></td>
    <td><%= one_article.published %></td>
    <td>
      <% if one_article.icon.nil? || one_article.icon < 1 %>image not exist
      <% else %>
        <% photo = Photo.find(one_article.icon) %>
        <%= image_tag( photo.title , style: "width: 100px;", alt: photo.description ) %>
      <% end %>
    </td>
    <td><%= link_to 'Show', admin_article_path(one_article) %></td>
    <td><%= link_to 'Edit', edit_admin_article_path(one_article)  %></td>
    <td><%= link_to 'Destroy', admin_article_path(one_article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><a href= "//localhost:3000/articles/<%= one_article.id.to_s %><%= @word_to_see %>">Beauty</a></td>
  </tr><% end %></tbody>
</table><% end %>
<br><%= link_to 'New Article', action: "new" %>
