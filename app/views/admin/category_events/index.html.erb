<p id="notice"><%= notice %></p>
<h1>Category Events</h1>
<% if @category_events.first.nil? %>
  <i>эта таблица пустая</i>
<% else %><table class="sv_table">
  <thead><tr>
    <th>Title</th>
    <th>Description</th>
    <th>Icon</th>
    <th colspan="4"></th>
  </tr></thead>
  <tbody><% @category_events.each do |category_event| %><tr>
    <td><%= category_event.title %></td>
    <td><%= category_event.description %></td>
    <td>
      <% if category_event.icon.nil? || category_event.icon < 1 %>image not exist
      <% else %>
        <% photo = Photo.find(category_event.icon) %>
        <%= image_tag( photo.title , style: "width: 100px;", alt: photo.description ) %>
      <% end %>
    </td>
    <td><%= link_to 'Show', admin_category_event_path(category_event) %></td>
    <td><%= link_to 'Edit', edit_admin_category_event_path(category_event) %></td>
    <td><%= link_to 'Destroy', admin_category_event_path(category_event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><a href="//localhost:3000/category_events/<%= category_event.id %>/<%= @word_to_see %>">Beauty</a></td>
  </tr><% end %></tbody>
</table><% end %>
<br><%= link_to 'New Category Event', action: "new" %>
