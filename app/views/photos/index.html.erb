<p id="notice"><%= notice %></p>
<h1>Photos</h1>
<% if @photos.first.nil? %>
  <i>эта таблица пустая</i>
<% else %><table class="sv_table">
  <thead><tr>
    <th>Title</th>
    <th>Preview</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr></thead>
  <tbody><% @photos.each do |photo| %><tr>
    <td><%= photo.title %></td>
    <td>
      <%if photo.title.nil? %>not exist
      <% else %>
        <%= image_tag( photo.title , style: "width: 100px;", alt: photo.description ) %>
      <% end %>
    </td>
    <td><%= photo.description %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr><% end %></tbody>
</table><% end %>
<br><%= link_to 'New Photo', new_photo_path %>